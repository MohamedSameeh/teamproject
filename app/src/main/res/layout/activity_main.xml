<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Operations TextView -->

    <!-- Result TextView -->
    <TextView
        android:id="@+id/tv_operations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="2"
        android:padding="16dp"
        android:textStyle="italic"
        android:paddingBottom="10dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:gravity="end"
        android:padding="16dp"
        android:textSize="36sp"
        android:textColor="#646464"
        android:textStyle="bold"
        android:text=""
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- Buttons GridLayout -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:rowCount="6"
        android:columnCount="4"
        android:paddingTop="0dp"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false">

        <!-- Row 1: Operations -->
        <Button
            android:id="@+id/btn_delAll"
            style="@style/CalculatorButton"
            android:background="@drawable/btns_shape"
            android:backgroundTint="#C51162"
            android:text="AC"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_delete"
            style="@style/CalculatorButton"
            android:background="@drawable/btns_shape"
            android:backgroundTint="#C51162"
            android:text="DEL"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_curlyBracket1"
            style="@style/CalculatorButton"
            android:backgroundTint="#20B2AA"
        android:text="("
        android:textColor="@color/white"
        android:background="@drawable/btns_shape"/>

        <Button
            android:id="@+id/btn_curlyBracket2"
            style="@style/CalculatorButton"
            android:backgroundTint="#20B2AA"
        android:text=")"
        android:textColor="@color/white"
        android:background="@drawable/btns_shape"/>

        <!-- Row 2: Trigonometric Operations -->
        <Button
            android:id="@+id/btn_sin"
            style="@style/CalculatorButton"
            android:background="@drawable/btns_shape"
            android:backgroundTint="#063A47"
            android:text="sin"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_cos"
            style="@style/CalculatorButton"
            android:background="@drawable/btns_shape"
            android:backgroundTint="#063A47"
            android:text="cos"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_tan"
            style="@style/CalculatorButton"
            android:background="@drawable/btns_shape"
            android:backgroundTint="#063A47"
            android:text="tan"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/btn_history"
            style="@style/CalculatorButton"
            android:background="@drawable/btns_shape"
            android:backgroundTint="#228B22"
            android:text="H"
            android:textColor="#FEFEFE" />
        <Button
            android:id="@+id/btn_log"
            style="@style/CalculatorButton"
            android:background="@drawable/btns_shape"
            android:backgroundTint="#063A47"
            android:text="log"
            android:textColor="#FEFEFE" />

        <Button
            android:id="@+id/btn_sqrt"
            style="@style/CalculatorButton"
            android:background="@drawable/btns_shape"
            android:backgroundTint="#063A47"
            android:text="âˆš"
            android:textColor="#FEFEFE" />

        <Button
            android:id="@+id/btn_pow"
            style="@style/CalculatorButton"
            android:background="@drawable/btns_shape"
            android:backgroundTint="#063A47"
            android:text="^"
            android:textColor="#FEFEFE" />

        <Button
            android:id="@+id/btn_plus"
            style="@style/CalculatorButton"
            android:backgroundTint="#20B2AA"
            android:text="+"
            android:textColor="@color/white"
            android:background="@drawable/btns_shape"/>

        <!-- Row 3: Numbers 7-9, Divide -->
        <Button
            android:id="@+id/btn_7"
            style="@style/CalculatorButton"
            android:backgroundTint="#4682B4"
        android:text="7"
        android:background="@drawable/btns_shape"/>

        <Button
            android:id="@+id/btn_8"
            style="@style/CalculatorButton"
            android:backgroundTint="#4682B4"
        android:text="8"
        android:background="@drawable/btns_shape"/>

        <Button
            android:id="@+id/btn_9"
            style="@style/CalculatorButton"
            android:backgroundTint="#4682B4"
        android:text="9"
        android:background="@drawable/btns_shape"/>

        <Button
            android:id="@+id/btn_divide"
            style="@style/CalculatorButton"
            android:backgroundTint="#4682B4"
        android:text="/"
        android:textColor="@color/white"
        android:background="@drawable/btns_shape"/>

        <!-- Row 4: Numbers 4-6, Multiply -->
        <Button
            android:id="@+id/btn_4"
            style="@style/CalculatorButton"
            android:backgroundTint="#4682B4"
        android:text="4"
        android:background="@drawable/btns_shape"/>

        <Button
            android:id="@+id/btn_5"
            style="@style/CalculatorButton"
            android:backgroundTint="#4682B4"
        android:text="5"
        android:background="@drawable/btns_shape"/>

        <Button
            android:id="@+id/btn_6"
            style="@style/CalculatorButton"
            android:backgroundTint="#4682B4"
        android:text="6"
        android:background="@drawable/btns_shape"/>

        <Button
            android:id="@+id/btn_multiply"
            style="@style/CalculatorButton"
            android:backgroundTint="#4682B4"
        android:text="x"
        android:textColor="@color/white"
        android:background="@drawable/btns_shape"/>

        <!-- Row 5: Numbers 1-3, Subtract -->
        <Button
            android:id="@+id/btn_1"
            style="@style/CalculatorButton"
            android:backgroundTint="#4682B4"
        android:text="1"
        android:background="@drawable/btns_shape"/>

        <Button
            android:id="@+id/btn_2"
            style="@style/CalculatorButton"
            android:backgroundTint="#4682B4"
        android:text="2"
        android:background="@drawable/btns_shape"/>

        <Button
            android:id="@+id/btn_3"
            style="@style/CalculatorButton"
            android:backgroundTint="#4682B4"
        android:text="3"
        android:background="@drawable/btns_shape"/>

        <Button
            android:id="@+id/btn_minus"
            style="@style/CalculatorButton"
            android:backgroundTint="#4682B4"
        android:text="-"
        android:textColor="@color/white"
        android:background="@drawable/btns_shape"/>

        <!-- Row 6: Special Operations -->
        <Button
            android:id="@+id/btn_modulus"
            style="@style/CalculatorButton"
            android:background="@drawable/btns_shape"
            android:backgroundTint="#063A47"
            android:text="%"
            android:textColor="#FEFEFE" />

        <Button
            android:id="@+id/btn_0"
            style="@style/CalculatorButton"
            android:backgroundTint="#4682B4"
        android:text="0"
        android:background="@drawable/btns_shape"/>

        <Button
            android:id="@+id/btn_decimal"
            style="@style/CalculatorButton"
            android:background="@drawable/btns_shape"
            android:backgroundTint="#063A47"
            android:text="."
            android:textColor="#FEFEFE" />

        <Button
            android:id="@+id/btn_equal"
            style="@style/CalculatorButton"
            android:background="@drawable/btns_shape"
            android:backgroundTint="#C87232"
            android:text="="
            android:textColor="#FEFEFE" />



    </GridLayout>
</LinearLayout>
