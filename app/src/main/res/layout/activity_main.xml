<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Operations TextView -->

    <!-- Result TextView -->
    <TextView

        android:id="@+id/tv_operations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="2"
        android:padding="16dp"
        android:paddingBottom="10dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:gravity="end"
        android:padding="16dp"
        android:textSize="36sp"
        android:textColor="#646464"
        android:text="0"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- Buttons GridLayout -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:rowCount="6"
        android:columnCount="4"
        android:paddingTop="10dp"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false">

        <!-- Row 1: Trigonometric and Power Operations -->
<!--        <Button android:id="@+id/btn_sin" android:text="sin" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>-->
<!--        <Button android:id="@+id/btn_cos" android:text="cos" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>-->
<!--        <Button android:id="@+id/btn_tan" android:text="tan" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>-->
<!--        <Button android:id="@+id/btn_pow" android:text="^" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>-->
        <Button android:textColor="@color/white" android:backgroundTint="#1e1e1e" android:id="@+id/btn_delAll" android:text="AC" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>
        <Button
            android:textColor="@color/white"
            android:backgroundTint="#1e1e1e"
            android:src="@drawable/remove"
            android:scaleType="fitXY"
            android:id="@+id/btn_delete"
            style="@style/CalculatorButton"
            android:layout_width="79dp"
            android:background="@drawable/btns_shape"
            android:text="DEL" />
                <Button android:textColor="@color/white" android:backgroundTint="#1e1e1e" android:id="@+id/btn_curlyBracket1" android:text="(" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>
                <Button android:textColor="@color/white" android:backgroundTint="#1e1e1e" android:id="@+id/btn_curlyBracket2" android:text=")" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>

        <!-- Row 1: Trigonometric and Power Operations -->
                <Button android:textColor="@color/white" android:backgroundTint="#1e1e1e" android:id="@+id/btn_sin" android:text="sin" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>
                <Button android:textColor="@color/white" android:backgroundTint="#1e1e1e" android:id="@+id/btn_cos" android:text="cos" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>
                <Button android:textColor="@color/white" android:backgroundTint="#1e1e1e" android:id="@+id/btn_tan" android:text="tan" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>
        <Button android:textColor="@color/white" android:backgroundTint="#1e1e1e" android:id="@+id/btn_plus" android:text="+" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>



        <!-- Row 2: Numbers 7-9, Divide -->
        <Button android:id="@+id/btn_7" android:text="7" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>
        <Button android:id="@+id/btn_8" android:text="8" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>

        <Button android:id="@+id/btn_9" android:text="9" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>
        <Button android:textColor="@color/white" android:backgroundTint="#1e1e1e" android:id="@+id/btn_divide" android:text="/" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>

        <!-- Row 3: Numbers 4-6, Multiply -->
        <Button android:id="@+id/btn_4" android:text="4" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>
        <Button android:id="@+id/btn_5" android:text="5" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>
        <Button android:id="@+id/btn_6" android:text="6" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>
        <Button android:textColor="@color/white" android:backgroundTint="#1e1e1e" android:id="@+id/btn_multiply" android:text="x" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>

        <!-- Row 4: Numbers 1-3, Subtract -->
        <Button android:id="@+id/btn_1" android:text="1" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>
        <Button android:id="@+id/btn_2" android:text="2" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>
        <Button android:id="@+id/btn_3" android:text="3" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>
        <Button android:textColor="@color/white"  android:backgroundTint="#1e1e1e" android:id="@+id/btn_minus" android:text="-" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>
        <Button android:id="@+id/btn_modulus" android:text="%" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>
        <!-- Row 5: Numbers 0, 00, Decimal, Add -->
        <Button android:id="@+id/btn_0" android:text="0" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>
<!--        <Button android:id="@+id/btn_00" android:text="00" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>-->
        <Button android:id="@+id/btn_decimal" android:text="." style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>

        <!-- Row 6: Clear, Delete, Equal, Modulus -->
        <Button android:backgroundTint="#f08221" android:id="@+id/btn_equal" android:text="=" style="@style/CalculatorButton" android:background="@drawable/btns_shape"/>


    </GridLayout>
</LinearLayout>

