<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- First Equation Coefficients (aX + bY + cZ = d) -->
        <EditText
            android:id="@+id/editTextA1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:hint="Enter coefficient A1"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextB1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"
            android:hint="Enter coefficient B1"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextC1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"
            android:hint="Enter coefficient C1"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextD1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"
            android:hint="Enter constant D1"
            android:inputType="numberDecimal" />

        <!-- Second Equation Coefficients (aX + bY + cZ = d) -->
        <EditText
            android:id="@+id/editTextA2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
            android:hint="Enter coefficient A2"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextB2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"
            android:hint="Enter coefficient B2"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextC2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"
            android:hint="Enter coefficient C2"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextD2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"
            android:hint="Enter constant D2"
            android:inputType="numberDecimal" />

        <!-- Third Equation Coefficients (aX + bY + cZ = d) -->
        <EditText
            android:id="@+id/editTextA3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
            android:hint="Enter coefficient A3"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextB3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"
            android:hint="Enter coefficient B3"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextC3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"
            android:hint="Enter coefficient C3"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextD3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"
            android:hint="Enter constant D3"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/buttonSolveSystem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
            android:text="Solve System" />

        <TextView
            android:id="@+id/textViewResultLinearSystem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Result:" />
    </LinearLayout>
</ScrollView>
